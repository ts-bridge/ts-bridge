{
  "name": "@ts-bridge/root",
  "version": "14.0.0",
  "private": true,
  "description": "The root package of the monorepo.",
  "homepage": "https://github.com/ts-bridge/ts-bridge#readme",
  "bugs": {
    "url": "https://github.com/ts-bridge/ts-bridge/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ts-bridge/ts-bridge.git"
  },
  "files": [
    "dist"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc --build ./tsconfig.build.json",
    "build:docs": "retype build",
    "get-typescript-versions": "./scripts/get-typescript-versions.sh",
    "postinstall": "simple-git-hooks",
    "lint": "yarn lint:eslint && yarn lint:constraints && yarn lint:misc --check && yarn lint:dependencies --check && yarn lint:changelogs",
    "lint:changelogs": "yarn workspaces foreach --all --no-private run lint:changelog",
    "lint:constraints": "yarn constraints",
    "lint:dependencies": "depcheck && yarn dedupe",
    "lint:eslint": "eslint . --cache",
    "lint:fix": "yarn lint:eslint --fix && yarn lint:constraints --fix && yarn lint:misc --write && yarn lint:dependencies && yarn lint:changelogs --fix",
    "lint:misc": "prettier '**/*.json' '**/*.md' '**/*.yml' '!.yarnrc.yml' --ignore-path .gitignore --no-error-on-unmatched-pattern",
    "prepack": "./scripts/prepack.sh",
    "start:docs": "retype start",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" vitest"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,ts,cts,mts}": [
      "eslint --fix"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@lavamoat/allow-scripts": "^3.0.4",
    "@lavamoat/preinstall-always-fail": "^2.0.0",
    "@metamask/auto-changelog": "^3.4.4",
    "@metamask/create-release-branch": "^4.0.0",
    "@metamask/eslint-config": "github:MetaMask/eslint-config#head=mrtenz/eslint-9&workspace=@metamask/eslint-config",
    "@metamask/eslint-config-nodejs": "github:MetaMask/eslint-config#head=mrtenz/eslint-9&workspace=@metamask/eslint-config-nodejs",
    "@metamask/eslint-config-typescript": "github:MetaMask/eslint-config#head=mrtenz/eslint-9&workspace=@metamask/eslint-config-typescript",
    "@vitest/coverage-istanbul": "^1.5.0",
    "depcheck": "^1.4.7",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import-x": "^4.3.0",
    "eslint-plugin-jsdoc": "^50.2.4",
    "eslint-plugin-n": "^17.10.3",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.1.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.3.3",
    "prettier-plugin-packagejson": "^2.5.2",
    "retypeapp": "^3.5.0",
    "semver": "^7.6.0",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.7.0",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.5.0"
  },
  "packageManager": "yarn@4.1.1",
  "engines": {
    "node": "^18.18 || ^20 || >=22"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "lavamoat": {
    "allowScripts": {
      "$root$": true,
      "@lavamoat/preinstall-always-fail": false,
      "vitest>vite>esbuild": true,
      "simple-git-hooks": true
    }
  }
}
